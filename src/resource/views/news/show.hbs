{{> header}}
<div class="app-content">
    <div class="pcoded-container">
        {{> navbar}}
        <div class="pcoded-content">
            <div class="page-header">
                <div class="row align-items-end">
                    <div class="col-12 col-md-8">
                        <div class="page-header-title text-center text-md-start flex-column flex-md-row">
                        <i class="fas fa-eye bg-c-blue me-0 mb-2 me-md-4 mb-md-0"></i>
                        <div class="d-inline">
                            <h5>Chi tiết bài viết</h5>
                            <span>lorem ipsum dolor sit amet, consectetur adipisicing elit</span>
                        </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="page-header-breadcrumb px-4">
                        <ul class="breadcrumb breadcrumb-title mb-0 align-items-center py-3 px-4">
                            <li class="breadcrumb-item breadcrumb-path">
                                <i class="fas fa-eye"></i> / 
                            Chi tiết bài viết / {{newsDetail.title}} </li>
                        </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pcoded-inner-content">
                <div class="mt-4">
                    <h1>{{newsDetail.title}}</h1>
                    <img src="{{showImagePostDetail newsDetail.image}}" alt="">
                    <div class="d-flex align-items-center my-3" style="gap: 8px;">
                        <img class="collabr-img-post-detail rounded-circle" src={{checkGender this.genderAuther}} alt="{{this.auther}}">
                        <div class="">
                            <h6 class="mb-0">{{newsDetail.auther}} </h6>
                            <p class="mb-0">
                                <span>{{dayOfWeek newsDetail.createdAt}} {{dateConvert newsDetail.createdAt}}</span>
                            </p>
                        </div>
                    </div>
                    <p class="text-secondary" style="font-size: 13px;"><strong>Danh mục:</strong> <span>{{newsDetail.category}}</span></p> 
                    <p class="show-content">{{{newsDetail.content}}}
                        <script></script>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>