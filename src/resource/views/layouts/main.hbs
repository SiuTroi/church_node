  <body>
    <div class="app">
      {{{ body }}}
      {{#if isNotAdmin}}
        <div></div>
        {{else}}
        <a href="{{#if isCollaborator}}/users/news/create{{else}}/admin/news/create{{/if}}" 
          class="create-icon btn btn-primary">
          <i class="fa-solid fa-plus"></i>
        </a>
      {{/if}}
    </div>
    <script>
        const btnSwitchOn = document.querySelector('.switch-icon-on');
        const btnSwitchOff = document.querySelector('.switch-icon-off');
        const pcodedContent = document.querySelector(".pcoded-content");
        const pcodedNavbar = document.querySelector('.pcoded-navbar');

        btnSwitchOn.addEventListener('click', () => {
          btnSwitchOn.style.display = "none";
          btnSwitchOff.style.display = "block";
          pcodedNavbar.style.display = "none";
          if(window.innerWidth > 992) {
            pcodedContent.style.marginLeft = "0";
          }
        })
        btnSwitchOff.addEventListener('click', () => {
          btnSwitchOn.style.display = "block";
          btnSwitchOff.style.display = "none";
          pcodedNavbar.style.display = "block";
          if(window.innerWidth > 992) {
            pcodedContent.style.marginLeft = "var(--pcoded-width)";
          }
        })

        if(window.innerWidth > 992) {
          const pcodedNavbarStyles = window.getComputedStyle(pcodedNavbar);
          if(pcodedNavbarStyles.width === 250) {
            pcodedNavbar.stylesetProperty("margin-left", "var(--pcoded-width)", "important")
          }
        }
        document.addEventListener("resize", function() {
          if(window.innerWidth < 992) {
            pcodedNavbar.stylesetProperty("display", "none", "important")
          }
        })
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
